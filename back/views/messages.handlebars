<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Mensajes de Contacto</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  {{> adminNav}}
  <div class="admin-content">
    <h1>Mensajes de Contacto</h1>
    <table class="projects-table">
      <thead>
        <tr>
          <th>ID</th><th>Nombre</th><th>Email</th><th>Mensaje</th><th>Fecha</th><th>Acción</th>
        </tr>
      </thead>
      <tbody>
        {{#each messages}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.message}}</td>
          <td>{{this.created_at}}</td>
          <td class="msg-actions">
            <a href="/admin/messages/delete/{{this.id}}" class="delete-btn">❌</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>
