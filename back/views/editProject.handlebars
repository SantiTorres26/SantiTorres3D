{{!-- views/editProject.handlebars --}}

<h1>Editar Proyecto</h1>

<form action="/admin/projects/edit/{{project.id}}" method="POST" class="admin-form">
  <input
    type="text"
    name="title"
    placeholder="Título del proyecto"
    value="{{project.title}}"
    required
  />
  <textarea
    name="description"
    placeholder="Descripción del proyecto"
    rows="4"
    required
  >{{project.description}}</textarea>
  <input
    type="date"
    name="date"
    value="{{project.date}}"
    required
  />
  <div style="margin-top: 1rem;">
    <button type="submit" class="btn">Guardar Cambios</button>
    <a href="/admin/projects" class="btn" style="margin-left:0.5rem;">Cancelar</a>
  </div>
</form>
